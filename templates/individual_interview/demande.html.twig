{% extends 'base.html.twig' %}

{% block title %}Demande d'annulation{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

{% block body %}
    <main class="main" id="top">
        <div class="container" data-layout="container">

            {{ include('_sidebar.html.twig') }}

            <div class="content">

                {{ include('_navbar.html.twig') }}


                <div class="row g-0">
                    <div>
                        <div class="card mb-3">
                            <div class="card-header">

                                <h5 class="mb-0">Veuillez nous envoyer le motif de l'annulation</h5>
                            </div>
                            <div class="card-body bg-light">
                                <div class="row gx-2">
                                    {{ form(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 ps-lg-2">
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
